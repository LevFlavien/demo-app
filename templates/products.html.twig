{% extends 'connected-base.html.twig' %}

{% block title %}{{ 'page.products.title' | trans }}{% endblock %}

{% block content %}
<div class="products">
    <aside class="product-filters">
        <h3 class="product-filters__heading">{{ 'page.products.product-filters.filters' | trans }}</h3>
        <ol class="product-filters__list">
            {% for i in 0..3 %}
                <li class="product-filter">
                    <h4 class="product-filter__label">{{ 'page.products.product-filters.locale' | trans }}</h4>
                    <div class="product-filter__value">French</div>
                </li>
            {% endfor %}
        </ol>
    </aside>
    <section class="product-grid">
        <header class="product-grid__header">

            <div class="product-searchbar">
                <div class="product-searchbar__container">
                    <img class="product-searchbar__icon" src="{{ asset('build/images/search.svg') }}" alt="search" />
                    <input class="product-searchbar__input" type="text" placeholder="{{ 'page.products.product-searchbar.placeholder' | trans }}">
                    <button class="product-searchbar__button" disabled="true" aria-disabled="true" role="button" type="button" >{{ 'page.products.product-searchbar.search' | trans }}</button>
                    <div class="product-searchbar__separator"></div>
                    <span class="product-searchbar__result-count">{{ 'page.products.product-searchbar.count-results' | trans({'%count%': 10}) }}</span>
                </div>
            </div>

            {% embed './common/information.html.twig' with {helperTitle: 'page.products.information.helper-title' | trans } %}
                {%  block informationContent %}
                    {{ 'page.products.information.content' | trans }}
                {% endblock %}
            {% endembed %}

        </header>
        <div class="product-grid__list">
            {% for i in 0..9 %}
                <article class="product-card">
                    <a href="#{{ i }}">
                        <div class="product-card__image">
                            <img src="{{ asset('build/images/ziggy.png') }}" alt="{{ i }}"  />

                        </div>
                        <p class="product-card__title">Nike M2K TEKNO</p>
                    </a>
                </article>
            {% endfor %}
        </div>
    </section>
</div>
{% endblock %}
